generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Email {
  id         Int      @id @default(autoincrement())
  account    String
  folder     String
  messageId  String   @unique
  from       String
  to         String
  subject    String
  body       String   @db.LongText
  aiCategory String?
  createdAt  DateTime @default(now())
}
