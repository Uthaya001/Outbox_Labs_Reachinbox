# Backend
PORT=4000
USE_MOCK=true

# Prisma (only need if USE_MOCK=false)
DATABASE_URL="mysql://username:password@localhost:3306/reachinbox"

# Groq API (LLM & Embeddings) - set your key if available
GROQ_API_KEY=your_groq_api_key_here
GROQ_PROJECT=your_groq_project_id
GROQ_MODEL=your_model_name

# Slack webhook (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXXXXXX/XXXXXXXXX/XXXXXXXXXXXXXXXX

# Webhook site for testing
WEBHOOK_URL=https://webhook.site/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# IMAP (set these to enable real IMAP mode; otherwise mock mode is used)
IMAP_ENABLED=false
IMAP_ACCOUNT_1_EMAIL=alice@example.com
IMAP_ACCOUNT_1_HOST=imap.example.com
IMAP_ACCOUNT_1_PORT=993
IMAP_ACCOUNT_1_USER=alice@example.com
IMAP_ACCOUNT_1_PASS=supersecret
